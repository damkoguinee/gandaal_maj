{{ form_start(form) }}
    <div class="row mb-1">
        <div class="col-sm-12 col-md-12">
            <label class="form-label" for="">Recherchez un élève</label>
            <input type="text" name="search" placeholder="{{search ? search.nomComplet : 'recherchez un élève'}}" class="form-control" id="search_user" placeholder="Récherchez un éleve">
            <input type="hidden" name="id_eleve" value="{{search ? search.id : ''}}">
        </div>
        <div class="bg-light text-white" id="result-search"></div>
    </div>
    {# <div class="row mb-1">
        <div class="col-sm-12 col-md-8">{{form_row(form.tarifActivite)}}</div>      
    </div> #}
    <label class="form-label" for="">Activités*</label>
    <select name="tarifs[]" multiple class="form-select" aria-label="Sélectionnez une ou plusieurs activités">
        {% if inscription_activite.id is not empty %}
            <option value="{{inscription_activite.tarifActivite.id}}" selected>{{inscription_activite.tarifActivite.activite.nom ~" "~ inscription_activite.tarifActivite.montant|number_format(0,',',' ') ~ " "~ inscription_activite.tarifActivite.type|ucfirst}}</option>
        {% endif %}
        {% for tarif in tarifs %}
            <option value="{{ tarif.id}}">
                {{ tarif.activite.nom ~" "~ tarif.montant|number_format(0,',',' ') ~ " "~ tarif.type|ucfirst }} 
            </option>
        {% endfor %}
    </select>
    <div class="row mb-1">
        <div class="col-sm-12 col-md-6">{{form_row(form.remise)}}</div>       
        <div class="col-sm-12 col-md-6">{{form_row(form.dateInscription)}}</div>       
    </div>
    <button class="btn btn-primary">{{ button_label|default('Valider') }}</button>
    
    
{{ form_end(form) }}
