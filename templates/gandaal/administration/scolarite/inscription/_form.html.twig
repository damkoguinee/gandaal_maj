{{ form_start(form) }}
    <div class="row mb-1">
        <div class="col-sm-12 col-md-12">
            <label class="form-label" for="">Recherchez un élève</label>
            <input type="text" name="search" placeholder="{{search ? search.nomComplet : 'recherchez un élève'}}" class="form-control" id="search_user" placeholder="Récherchez un éleve">
            <input type="hidden" name="id_eleve" value="{{search ? search.id : ''}}">
        </div>
        <div class="bg-light text-white" id="result-search"></div>
    </div>
    <div class="row mb-1">
        <div class="col-sm-12 col-md-8">{{form_row(form.classe)}}</div>
        <div class="col-sm-12 col-md-4">{{form_row(form.etatScol)}}</div>        
    </div>
    <div class="row mb-1">
        <div class="col-sm-12 col-md-6">{{form_row(form.remiseInscription)}}</div>
        <div class="col-sm-12 col-md-6">{{form_row(form.remiseScolarite)}}</div>        
    </div>
    <div class="row mb-1">
        {{form_row(form.statut)}}
    </div>
    {% if etat == 'non inscrit' %}
        <button class="btn btn-primary">{{ button_label|default('Valider') }}</button>
    {% else %}
        <div class="alert alert-warning">Elève déjà inscrit pour cette année scolaire</div>
    {% endif %}
    
{{ form_end(form) }}
