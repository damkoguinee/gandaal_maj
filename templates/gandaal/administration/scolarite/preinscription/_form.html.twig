<div class="container-fluid">
    {{ form_start(form) }}
        <div class="row m-1 p-1 border border-2 border-dark rounded">
            <legend class="text-center fw-bold">Informations de l'élève</legend>

            <div class="row my-0 py-0">
                <div class="col-sm-12 col-md-4">
                    {{ form_row(form.nom) }}
                </div>        
                <div class="col-sm-12 col-md-4">
                    {{ form_row(form.prenom) }}
                </div>
                <div class="col-sm-12 col-md-2">
                    {{ form_row(form.sexe) }}
                </div> 
            </div>
            <div class="row my-0 py-0">        
                <div class="col-sm-12 col-md-3">
                    {{ form_row(form.dateNaissance) }}
                </div>
                <div class="col-sm-12 col-md-3">
                    {{ form_row(form.lieuNaissance) }}
                </div>       
                <div class="col-sm-12 col-md-3">
                    {{ form_row(form.telephone) }}
                </div>
                <div class="col-sm-12 col-md-3">
                    {{ form_row(form.email) }}
                </div> 
            </div>
            <div class="row my-0 py-0">        
                <div class="col-sm-12 col-md-6">
                    {{ form_row(form.adresse) }}
                </div>
                <div class="col-sm-12 col-md-3">
                    {{ form_row(form.ville) }}
                </div>
                <div class="col-sm-12 col-md-3">
                    {{ form_row(form.pays) }}
                </div> 
            </div>
            <div class="row my-0 py-0">        
                <div class="col-sm-12 col-md-3">
                    {{ form_row(form.ecoleOrigine) }}
                </div>
                <div class="col-sm-12 col-md-9">
                    {{ form_row(form.photo) }}
                </div>
            </div>              

            
        </div>
    
        <div class="row m-1 p-1 border border-2 border-dark rounded">
            <legend class="text-center fw-bold">Informations des parents</legend>
            
            <div class="row my-0 py-0">        
                <div class="col-sm-12 col-md-2">
                    {{ form_row(form.nomp) }}
                </div>        
                <div class="col-sm-12 col-md-2">
                    {{ form_row(form.prenomp) }}
                </div>   
                <div class="col-sm-12 col-md-2">
                    {{ form_row(form.telephonep) }}
                </div>
                <div class="col-sm-12 col-md-2">
                    {{ form_row(form.emailp) }}
                </div>       
                <div class="col-sm-12 col-md-2">
                    {{ form_row(form.professionp) }}
                </div>        
                <div class="col-sm-12 col-md-2">
                    {{ form_row(form.lieuTravailp) }}
                </div>   
            </div>

            <div class="row my-0 py-0">        
                <div class="col-sm-12 col-md-2">
                    {{ form_row(form.nomm) }}
                </div>        
                <div class="col-sm-12 col-md-2">
                    {{ form_row(form.prenomm) }}
                </div>   
                <div class="col-sm-12 col-md-2">
                    {{ form_row(form.telephonem) }}
                </div>
                <div class="col-sm-12 col-md-2">
                    {{ form_row(form.emailm) }}
                </div>       
                <div class="col-sm-12 col-md-2">
                    {{ form_row(form.professionm) }}
                </div>        
                <div class="col-sm-12 col-md-2">
                    {{ form_row(form.lieuTravailm) }}
                </div>   
            </div>
            
            <div class="row my-0 py-0">        
                <div class="col-sm-12 col-md-2">
                    {{ form_row(form.nomt) }}
                </div>        
                <div class="col-sm-12 col-md-2">
                    {{ form_row(form.prenomt) }}
                </div>   
                <div class="col-sm-12 col-md-2">
                    {{ form_row(form.telephonet) }}
                </div>
                <div class="col-sm-12 col-md-2">
                    {{ form_row(form.emailt) }}
                </div>       
                <div class="col-sm-12 col-md-2">
                    {{ form_row(form.professiont) }}
                </div>        
                <div class="col-sm-12 col-md-2">
                    {{ form_row(form.lieuTravailt) }}
                </div>   
            </div>
            
        </div>  
        <button class="btn btn-primary">{{ button_label|default('Ajouter') }}</button>

    {{form_end(form)}}
    
</div>
