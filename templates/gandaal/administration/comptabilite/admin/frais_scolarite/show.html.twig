{% extends 'base_gandaal.html.twig' %}
{% block title %}détail frais scolarité{% endblock %}
{% block ul_menu %}
    {% include "gandaal/_common/_nav_comptabilite.html.twig" %}
{% endblock %}

{% block produits %}
    <div class="row m-auto" style="min-height: 100vh; background-image: url('{{asset(chemin_images_config)}}fond.jpg');">
        {% include "gandaal/_common/_nav_comptabilite_admin.html.twig" %}

        <div class="col-sm-12 col-md-10">
            {{ include("gandaal/_common/_messages_flash.html.twig") }}
            <table class="table table-bordered table-striped table-hover align-middle">
                <tbody>
                    <tr>
                        <th>Niveau</th>
                        <td>{{ frais_scolarite.formation.code|strtoupper }}</td>
                    </tr>
                    <tr>
                        <th>Tranche</th>
                        <td>{{ frais_scolarite.tranche.nom }}</td>
                    </tr>
                    <tr>
                        <th>Montant</th>
                        <td>{{ frais_scolarite.montant|number_format(0,',',' ') }}</td>
                    </tr>
                    <tr>
                        <th>Date limite</th>
                        <td>{{ frais_scolarite.dateLimite|date("d/m/Y") }}</td>
                    </tr>
                    
                </tbody>
            </table>
            <div class="d-flex justify-content-between my-4">
                <a class="btn btn-light" href="{{ path('app_gandaal_administration_comptabilite_admin_frais_scolarite_index', {etablissement : etablissement.id}) }}">Retour</a>

                <a class="btn btn-warning" href="{{ path('app_gandaal_administration_comptabilite_admin_frais_scolarite_edit', {'id': frais_scolarite.id, etablissement : etablissement.id}) }}">Modifier</a>

                {{ include('gandaal/administration/comptabilite/admin/frais_scolarite/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
