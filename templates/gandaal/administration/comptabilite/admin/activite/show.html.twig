{% extends 'base_gandaal.html.twig' %}
{% block title %}déatil tarif{% endblock %}
{% block ul_menu %}
    {% include "gandaal/_common/_nav_comptabilite.html.twig" %}
{% endblock %}

{% block produits %}
    <div class="row m-auto" style="min-height: 100vh; background-image: url('{{asset(chemin_images_config)}}fond.jpg');">
        {% include "gandaal/_common/_nav_comptabilite_admin.html.twig" %}

        <div class="col-sm-12 col-md-10">
            {{ include("gandaal/_common/_messages_flash.html.twig") }}
                <table class="table table-bordered table-striped table-hover align-middle">
                    <tbody>
                        <tr>
                            <th>Activité</th>
                            <td>{{ tarif.activite.nom }}</td>
                        </tr>
                        <tr>
                            <th>Type de paiement</th>
                            <td>{{ tarif.type }}</td>
                        </tr>
                        <tr>
                            <th>Tarif</th>
                            <td>{{ tarif.montant|number_format(0,',',' ') }}</td>
                        </tr>
                        
                    </tbody>
                </table>
                <div class="d-flex justify-content-between my-4">
                    <a class="btn btn-light" href="{{ path('app_gandaal_administration_comptabilite_admin_activite_tarif_index', {etablissement : etablissement.id}) }}">Retour</a>

                    <a class="btn btn-warning" href="{{ path('app_gandaal_administration_comptabilite_admin_activite_tarif_edit', {'id': tarif.id, etablissement : etablissement.id}) }}">Modifier</a>

                    {{ include('gandaal/administration/comptabilite/admin/activite/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
