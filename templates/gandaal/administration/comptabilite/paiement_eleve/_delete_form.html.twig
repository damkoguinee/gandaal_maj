<!-- Bouton pour ouvrir le modal -->
<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">Annuler</button>

<!-- Modal de confirmation avec motif -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirmer l'op√©ration</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="deleteForm" method="post" action="{{ path('app_gandaal_administration_comptabilite_paiement_eleve_delete', {'id': paiement_lie.id, 'etablissement': etablissement.id}) }}">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="deleteReason" class="form-label">Saisir le motif d'annulation</label>
                        <textarea class="form-control" id="deleteReason" name="delete_reason" rows="3" required></textarea>
                    </div>
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ paiement_eleve.id) }}">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-danger">Confirmer la suppression</button>
                </div>
            </form>
        </div>
    </div>
</div>