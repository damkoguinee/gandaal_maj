{% extends 'base_gandaal.html.twig' %}
{% block title %}déatail de la matière{% endblock %}
{% block ul_menu %}
    {% include "gandaal/_common/_nav_pedagogie_admin.html.twig" %}
{% endblock %}

{% block produits %}
    <div class="row m-auto" style="min-height: 100vh; background-image: url('{{asset(chemin_images_config)}}fond.jpg');">

        {% include "gandaal/_common/_nav_pedagogie_menu.html.twig" %}
        <div class="col-sm-12 col-md-10">
            {{ include("gandaal/_common/_messages_flash.html.twig") }}
            <table class="table table-bordered table-striped table-hover align-middle">
                <tbody>
                    <tr>
                        <th>Niveau</th>
                        <td>{{ matiere.formation.nom }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ matiere.nom }}</td>
                    </tr>
                    <tr>
                        <th>Code Matière</th>
                        <td>{{ matiere.codeMatiere|ucfirst }}</td>
                    </tr>
                    <tr>
                        <th>Catégorie</th>
                        <td>{{ matiere.categorie.nom|ucfirst }}</td>
                    </tr>

                    <tr>
                        <th>Etat Pédagogie</th>
                        <td>{{ matiere.etatPedagogie|ucfirst }}</td>
                    </tr>
                    
                </tbody>
            </table>
            <div class="d-flex justify-content-between my-4">
                <a class="btn btn-light" href="{{ path('app_gandaal_administration_pedagogie_admin_matiere_index', {etablissement : etablissement.id}) }}">Retour</a>

                <a class="btn btn-warning" href="{{ path('app_gandaal_administration_pedagogie_admin_matiere_edit', {'id': matiere.id, etablissement : etablissement.id}) }}">Modifier</a>

                {{ include('gandaal/administration/pedagogie/admin/matiere/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
