{% extends 'base.html.twig' %}

{% block title %}accueil gandaal{% endblock %}

{% block body %}
    <div class="container-fluid">

        <div class="alert alert-success text-center fs-5 fw-bold" style="display: flex; justify-content:space-around; ">
            <label class="text-success ml-5">Utilsateur Connect√©: {{app.user.username}}</label> 
            {% if is_granted("ROLE_ADMIN") %}    
                <a class="btn btn-warning" href="{{path("app_gandaal_admin_entreprise_index")}}">
                    <i class="fa-solid fa-screwdriver-wrench"></i>
                </a>
            {% endif %}
            <label for="">
                <a class="btn btn-danger" href="{{path("app_logout")}}">
                    <i class="fa-solid fa-right-from-bracket"></i>
                </a>
            </label>
            
        </div>

        <div class="row align-items-center py-5" style="margin: auto; margin-top: 1rem; width:80%; background-image: url('{{asset(chemin_images_config)}}fond.jpg');">
            <div class=" fs-4 fw-bold text-center m-0 p-0">{{entreprise.nom|ucfirst}}</div>

            <div class="row"> 
                <img height="30" src="{{asset(chemin_images_config)}}drapeau.png">
            </div>

            <div class="text-center mb-2"><img width="50" height="50" src="{{asset(chemin_images_config)}}symbole.png"></div>
            <div class="row ">
                {% for etablissement in etablissements %}                
                    <div class="col-2 m-auto">
                        <a  class="btn btn-light" href="{{path("app_gandaal_etablissement_home", {etablissement : etablissement.id})}}">
                            <div class="card" style="width: 12rem; height: 14rem;">
                                <img src="{{asset(chemin_images_config) ~ etablissement.entreprise.logo}}"  class="card-img-top m-auto" alt="image {{etablissement.id}}" style="width: 11rem; height: 8rem">


                                <div class="card-bod m-auto" style="width: 9rem;">
                                    <h5 class="card-title" style="text-align: center;">{{etablissement.nom|ucwords}}</h5>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>            
        </div>
    </div>
{% endblock %}
