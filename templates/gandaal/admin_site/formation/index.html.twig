{% extends 'base_gandaal.html.twig' %}
{% block title %}liste des formations{% endblock %}
{% block ul_menu %}
    {% include "gandaal/_common/_nav_admin_site.html.twig" %}
{% endblock %}

{% block produits %}
    <div class="row m-auto" style="min-height: 100vh; background-image: url('{{asset(chemin_images_config)}}fond.jpg');">
        {# {% include "gandaal/_common/_nav_comptabilite_2.html.twig" %} #}

        <div class="col-sm-12 col-md-12">
            {{ include("gandaal/_common/_messages_flash.html.twig") }}
            <table class="table table-bordered table-striped table-hover align-middle">

                <thead class="sticky-top bg-light text-center">
                    <tr>
                        <th colspan="6" class="text-center bg-info text-white">
                            <a class="btn btn-light text-center" href="{{path("app_gandaal_admin_site_formation_new", {etablissement : etablissement.id})}}">Ajouter</a>
                        </th>
                    </tr>
                    <tr>
                        <th>N°</th>
                        <th>Cursus</th>
                        <th>Etablissement</th>
                        <th>Nom</th>
                        <th>Code</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for key, formation in formations %}
                    <tr>
                        <td class="text-center">{{ key + 1 }}</td>
                        <td>{{ formation.cursus.nom|ucwords }}</td>
                        <td>{{ formation.cursus.etablissement.lieu|ucwords }}</td>
                        <td>{{ formation.nom|ucwords|exposantClasse|raw|exposantClasse|raw }}</td>
                        <td>{{ formation.code|ucfirst }}</td>
                        <td class="text-center">
                            <a class="btn btn-success" href="{{ path('app_gandaal_admin_site_formation_show', {'id': formation.id, etablissement : etablissement.id}) }}"><i class="fa fa-eye"></i></a>
                            <a class="btn btn-warning" href="{{ path('app_gandaal_admin_site_formation_edit', {'id': formation.id, etablissement : etablissement.id}) }}"><i class="fa fa-edit"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colsPan="6">Aucune formation enregistrée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
