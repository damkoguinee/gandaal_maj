{% extends 'base.html.twig' %}

{% block title %}Entreprise{% endblock %}

{% block body %}
    <div class="row my-2 mx-0 px-0">
        {% include "gandaal/_common/_nav_admin.html.twig" %}
        <div class="col-sm-12 col-md-10 mx-0 px-0">
            {{ include("gandaal/_common/_messages_flash.html.twig") }}

            <div class="container-fluid mx-0 px-0" style="min-height: 90vh; background-image: url('{{asset(chemin_images_config)}}fond.jpg');">

                {{include("gandaal/_common/_entete.html.twig")}}
                <table class="table table-bordered table-striped table-hover align-middle">

                    <thead class="sticky-top bg-light text-center">
                        <tr>
                            <th colspan="8" class="text-center bg-info text-white">
                                <a class="btn btn-light text-center" href="{{path("app_gandaal_admin_entreprise_new")}}">Ajouter</a>
                            </th>
                        </tr>
                        <tr>
                            <th>NÂ°</th>
                            <th>Nom</th>
                            <th>Telephone</th>
                            <th>Email</th>
                            <th>Adresse</th>
                            <th>Pays</th>
                            <th>Agrement</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for entreprise in entreprises %}
                        <tr>
                            <td>{{ entreprise.id }}</td>
                            <td>{{ entreprise.nom }}</td>
                            <td>{{ entreprise.telephone }}</td>
                            <td>{{ entreprise.email }}</td>
                            <td>{{ entreprise.adresse }}</td>
                            <td>{{ entreprise.pays }}</td>
                            <td>{{ entreprise.agrement }}</td>
                            <td class="text-center">
                                <a class="btn btn-success" href="{{ path('app_gandaal_admin_entreprise_show', {'id': entreprise.id}) }}"><i class="fa fa-eye"></i></a>
                                <a class="btn btn-warning" href="{{ path('app_gandaal_admin_entreprise_edit', {'id': entreprise.id}) }}"><i class="fa fa-edit"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
