{% extends 'base.html.twig' %}

{% block title %}Entreprise détail{% endblock %}

{% block body %}
    <div class="row my-2 mx-0 px-0">
        {% include "gandaal/_common/_nav_admin.html.twig" %}
        <div class="col-sm-12 col-md-10 mx-0 px-0">
            {{ include("gandaal/_common/_messages_flash.html.twig") }}
            <div class="container-fluid py-2 mx-0 px-0" style="min-height: 90vh; background-image: url('{{asset(chemin_images_config)}}fond.jpg');">
                {{include("gandaal/_common/_entete.html.twig")}}
                <table class="table table-bordered table-striped table-hover align-middle">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ entreprise.id }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ entreprise.nom }}</td>
                        </tr>
                        <tr>
                            <th>Téléphone</th>
                            <td>{{ entreprise.telephone }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ entreprise.email }}</td>
                        </tr>
                        <tr>
                            <th>Adresse</th>
                            <td>{{ entreprise.adresse }}</td>
                        </tr>
                        <tr>
                            <th>Pays</th>
                            <td>{{ entreprise.pays }}</td>
                        </tr>
                        <tr>
                            <th>Agrement</th>
                            <td>{{ entreprise.agrement }}</td>
                        </tr>
                    </tbody>
                </table>
                <div class="d-flex justify-content-between my-4">
                    <a class="btn btn-light" href="{{ path('app_gandaal_admin_entreprise_index') }}">Retour</a>

                    <a class="btn btn-warning" href="{{ path('app_gandaal_admin_entreprise_edit', {'id': entreprise.id}) }}">Modifier</a>

                    {{ include('gandaal/admin/entreprise/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
