{% extends 'base.html.twig' %}

{% block title %}config_fonction{% endblock %}

{% block body %}
    <div class="row my-2 mx-0 px-0">
        {% include "gandaal/_common/_nav_admin_site.html.twig" %}
        <div class="col-sm-12 col-md-10 mx-0 px-0">
            {{ include("gandaal/_common/_messages_flash.html.twig") }}

            <div class="container-fluid mx-0 px-0" style="min-height: 90vh; background-image: url('{{asset(chemin_images_config)}}fond.jpg');">

                {{include("gandaal/_common/_entete_site.html.twig")}}
                <table class="table table-bordered table-striped table-hover align-middle">

                    <thead class="sticky-top bg-light text-center">
                        <tr>
                            <th colspan="3" class="text-center bg-info text-white">
                                <a class="btn btn-light text-center" href="{{path("app_gandaal_admin_site_config_fonction_new")}}">Ajouter</a>
                            </th>
                        </tr>
                        <tr>
                            <th>N°</th>
                            <th>Nom</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for key, config_fonction in config_fonctions %}
                        <tr>
                            <td class="text-center">{{ key + 1 }}</td>
                            <td>{{ config_fonction.nom|ucwords }}</td>
                            <td class="text-center">
                                <a class="btn btn-success" href="{{ path('app_gandaal_admin_site_config_fonction_show', {'id': config_fonction.id}) }}"><i class="fa fa-eye"></i></a>
                                <a class="btn btn-warning" href="{{ path('app_gandaal_admin_site_config_fonction_edit', {'id': config_fonction.id}) }}"><i class="fa fa-edit"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colsPan="3">Aucune config_fonction enregistrée</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
